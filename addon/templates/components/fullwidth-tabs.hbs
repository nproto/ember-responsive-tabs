<nav>
  <ul>
    {{#each navItems as |item|}}
      <li class={{if (eq isActiveId item.elementId) "tab-current" ""}}>
        <a
            href="#{{item.elementId}}"
            {{action (action "select" item.elementId)}}
        >
          <i class="{{item.icon}}"></i>
          <span>{{item.title}}</span>
        </a>

      </li>
    {{/each}}
  </ul>
</nav>
<div class="content">
  {{yield
    (hash
    pane=(component "fullwidth-tabs.tab-pane" parent=this activeId=isActiveId)
    )
  }}
</div>
